@page
@model TestMVC.Pages.AdminUsersDeleteModel
@{
    ViewData["Title"] = "Delete User";
}

<h1>Delete User</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>User</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">ID</dt>
        <dd class="col-sm-10">@Model.CUser.Id</dd>
        <dt class="col-sm-2">User Name</dt>
        <dd class="col-sm-10">@Model.CUser.UserName</dd>
        <dt class="col-sm-2">Birth Date</dt>
        <dd class="col-sm-10">@Model.CUser.BirthDate.ToString("yyyy-MM-dd")</dd>
        <dt class="col-sm-2">Phone Number</dt>
        <dd class="col-sm-10">@Model.CUser.PhoneNum</dd>
        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Model.CUser.Email</dd>
        <dt class="col-sm-2">User Role</dt>
        <dd class="col-sm-10">@Model.CUser.UserRole</dd>
        <dt class="col-sm-2">From Where Found Out</dt>
        <dd class="col-sm-10">@Model.CUser.FromWhereFoundOut</dd>
        <dt class="col-sm-2">Status</dt>
        <dd class="col-sm-10">@Model.CUser.Status</dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="CUser.Id" />
        <button type="submit" class="btn btn-danger">Delete</button> |
        <a asp-page="./Users" class="btn btn-secondary">Cancel</a>
    </form>
</div>
@section Scripts{
}