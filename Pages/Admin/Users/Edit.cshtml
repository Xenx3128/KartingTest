@page
@model TestMVC.Pages.AdminUsersEditModel
@{
    ViewData["Title"] = "Edit User";
}

<h1>Edit User</h1>

<form method="post">
    <div class="form-group">
        <label asp-for="CUser.Id"></label>
        <input asp-for="CUser.Id" class="form-control" readonly />
        <span asp-validation-for="CUser.Id" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="CUser.UserName"></label>
        <input asp-for="CUser.UserName" class="form-control" />
        <span asp-validation-for="CUser.UserName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="CUser.BirthDate"></label>
        <input asp-for="CUser.BirthDate" class="form-control" type="date" />
        <span asp-validation-for="CUser.BirthDate" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="CUser.PhoneNum"></label>
        <input asp-for="CUser.PhoneNum" class="form-control" />
        <span asp-validation-for="CUser.PhoneNum" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="CUser.Email"></label>
        <input asp-for="CUser.Email" class="form-control" />
        <span asp-validation-for="CUser.Email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="CUser.UserRole"></label>
        <input asp-for="CUser.UserRole" class="form-control" />
        <span asp-validation-for="CUser.UserRole" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="CUser.FromWhereFoundOut"></label>
        <input asp-for="CUser.FromWhereFoundOut" class="form-control" />
        <span asp-validation-for="CUser.FromWhereFoundOut" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="CUser.Status"></label>
        <input asp-for="CUser.Status" class="form-control" />
        <span asp-validation-for="CUser.Status" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-secondary">Save</button>
    <a asp-page="./Users" class="btn btn-light">Cancel</a>
</form>
@section Scripts{
}