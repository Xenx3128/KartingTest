@page
@model TestMVC.Pages.AdminUsersModel
@{
    ViewData["Title"] = "Панель администратора: Пользователи";
}

<div id="admin-users-main-wrap">
    <div class="row">
        <a asp-page="./Create" id="users-add-icon" type="button" class="add-btn admin-menu-icon" title="Добавить пользователя">
            <i class="fa fa-user-plus fa-lg"></i>
        </a>
    </div>

    <table id="adminUsersMain" class="cell-border stripe">
        <thead>
            <tr>
                <th>ID</th>
                <th>ФИО</th>
                <th>Электронная почта</th>
                <th>Телефон</th>        
                <th>Дата рождения</th>
                <th>Роли</th>
                <th>Откуда узнали</th>
                <th>Статус</th>
                <th>Примечание</th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model.Users)
            {
                <tr>
                    <td>@user.Id</td>
                    <td>@user.FullName</td>
                    <td>@user.Email</td>
                    <td>@user.PhoneNumber</td>
                    <td>@user.BirthDate.ToString("yyyy-MM-dd")</td>
                    <td>@string.Join(", ", await Model.GetUserRolesAsync(user.Id))</td>
                    <td>@user.FromWhereFoundOut</td>
                    <td>@user.Status</td>
                    <td>@user.Note</td>
                    <td>
                        <a asp-page="./Details" asp-route-id="@user.Id" class="admin-menu-icon" id="users-details-icon" title="Просмотр аккаунта пользователя">
                            <i class="fas fa-search fa-lg"></i>
                        </a> |
                        <a asp-page="./Edit" asp-route-id="@user.Id" class="admin-menu-icon" id="users-edit-icon" title="Редактировать данные пользователя">
                            <i class="fa fa-edit fa-lg"></i>
                        </a> |
                        <form method="post" asp-page-handler="Delete" asp-route-id="@user.Id" class="d-inline">
                            <button type="submit" class="admin-menu-icon btn btn-link p-0" id="users-delete-icon" title="Удалить аккаунт пользователя"
                                    onclick="return confirm('Вы уверены, что хотите удалить этого пользователя?')">
                                <i class="fa fa-trash fa-lg text-danger"></i>
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<link rel="stylesheet" href="~/css/admin.css">

@section Scripts{
    <script type="module" src='@Url.Content("~/js/admin.js")'></script>
}