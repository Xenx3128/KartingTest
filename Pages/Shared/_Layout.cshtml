<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>КвестМания:@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/orders.css" asp-append-version="true" />

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css">

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
</head>
<body>
    <header class="header-outer">
        <div class="header-inner responsive-wrapper">
            <div class="header-logo">
                <a asp-page="/">
                    <img src="https://static.tildacdn.com/tild3632-3130-4834-b666-646466613131/g10.svg" />
                </a>
                
            </div>
            <nav class="header-navigation">
                <a href="#">Трасса</a>
                <a href="#">Цены</a>
                <a href="#">Сертификаты</a>
                <a href="#">Абонементы</a>
                <a href="#">Как добраться</a>
                <a href="#">+7 (342) 243-01-23</a>
                <a asp-page="/Orders" type="button" id="order-btn">Забронировать</a>
                <a asp-page="/Account/Login">Вход</a>
                <a asp-page="/Account/Register" type="button">Регистрация</a>
            </nav>
        </div>
    </header>

    <div class="main">
        @RenderBody()
    </div>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>