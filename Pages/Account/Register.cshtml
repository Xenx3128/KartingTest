@page
@model TestMVC.Pages.RegisterModel
@{
    ViewData["Title"] = "Регистрация";
}

<h1>Регистрация</h1>

<form method="post">
    <div class="form-group">
        <label asp-for="CUser.UserName">ФИО</label>
        <input asp-for="CUser.UserName" class="form-control" />
        <span asp-validation-for="CUser.UserName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="CUser.Email">Электронная почта</label>
        <input asp-for="CUser.Email" class="form-control" />
        <span asp-validation-for="CUser.Email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="CUser.PhoneNum">Номер телефона</label>
        <input asp-for="CUser.PhoneNum" class="form-control" />
        <span asp-validation-for="CUser.PhoneNum" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="CUser.BirthDate">Дата рождения</label>
        <input asp-for="CUser.BirthDate" class="form-control" type="date" />
        <span asp-validation-for="CUser.BirthDate" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="CUser.Pwd">Придумайте пароль</label>
        <input asp-for="CUser.Pwd" class="form-control" type="password" />
        <span asp-validation-for="CUser.Pwd" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="CUser.FromWhereFoundOut">Расскажите, откуда узнали о нас</label>
        <textarea asp-for="CUser.FromWhereFoundOut" class="form-control" rows="3"></textarea>
        <span asp-validation-for="CUser.FromWhereFoundOut" class="text-danger"></span>
    </div>
    <br>
    <button type="submit" class="btn btn-secondary">Зарегистрироваться</button>
    <a asp-page="/Index" class="btn btn-light">Отмена</a>
</form>