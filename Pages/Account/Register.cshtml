@page
@model TestMVC.Pages.RegisterModel
@{
    ViewData["Title"] = "Регистрация";
}

<div class="registration-form-wrap">
    <div class="container">
        <form method="post">
            <!-- Account Section -->
            <div class="row">
                <h4 class="red-heading">Регистрация</h4>
                
                <!-- Full Name -->
                <label asp-for="Input.FullName" class="reg-label">Имя <span class="required">*</span></label>
                <div class="input-group input-group-icon">
                    <input asp-for="Input.FullName" placeholder="Ваше имя" required>
                    <div class="input-icon">
                        <i class="fas fa-user"></i>
                    </div>
                </div>
                <span asp-validation-for="Input.FullName" class="text-danger"></span>

                <!-- Email -->
                <label asp-for="Input.Email" class="reg-label">Электронная почта <span class="required">*</span></label>
                <div class="input-group input-group-icon">
                    <input asp-for="Input.Email" placeholder="Ваш адрес эл. почты" required>
                    <div class="input-icon">
                        <i class="fas fa-envelope"></i>
                    </div>
                </div>
                <span asp-validation-for="Input.Email" class="text-danger"></span>

                <!-- Phone Number -->
                <label asp-for="Input.PhoneNumber" class="reg-label">Номер телефона <span class="required">*</span></label>
                <div class="input-group input-group-icon">
                    <input asp-for="Input.PhoneNumber" 
                           placeholder="Например: +79123456789" 
                           pattern="^(\+7|7|8)[\s\-]?\(?[489][0-9]{2}\)?[\s\-]?[0-9]{3}[\s\-]?[0-9]{2}[\s\-]?[0-9]{2}$"
                           required>
                    <div class="input-icon">
                        <i class="fa fa-phone"></i>
                    </div>
                </div>
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>

                <!-- Birth Date -->
                <label asp-for="Input.BirthDate" class="reg-label">Укажите ваш день рождения <span class="required">*</span></label>
                <div class="input-group input-group-icon">
                    <input asp-for="Input.BirthDate" type="date" required>
                    <div class="input-icon">
                        <i class="fa fa-calendar"></i>
                    </div>
                </div>
                <span asp-validation-for="Input.BirthDate" class="text-danger"></span>
            </div>
            
            <div class="row">
                <!-- Password -->
                <label asp-for="Input.Password" class="reg-label">Пароль <span class="required">*</span></label>
                <div class="input-group input-group-icon">
                    <input asp-for="Input.Password" type="password" placeholder="Придумайте пароль" required>
                    <div class="input-icon">
                        <i class="fas fa-unlock"></i>
                    </div>
                </div>
                <span asp-validation-for="Input.Password" class="text-danger"></span>

                <!-- Confirm Password -->
                <label asp-for="Input.ConfirmPassword" class="reg-label">Подтвердите пароль <span class="required">*</span></label>
                <div class="input-group input-group-icon">
                    <input asp-for="Input.ConfirmPassword" type="password" placeholder="Подтвердите ваш пароль" required>
                    <div class="input-icon">
                        <i class="fas fa-key"></i>
                    </div>
                </div>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>

                <!-- How Found Out -->
                <label asp-for="Input.FromWhereFoundOut" class="reg-label">Расскажите, откуда узнали о нас</label>
                <div class="input-group">
                    <textarea asp-for="Input.FromWhereFoundOut" rows="4" placeholder="Расскажите, откуда узнали о нас"></textarea>
                </div>
                <span asp-validation-for="Input.FromWhereFoundOut" class="text-danger"></span>
            </div>

            <div class="reg-break"></div>
            
            <!-- Terms and Conditions -->
            <div class="row">
                <div class="input-group">
                    <input asp-for="Input.AcceptTerms" id="terms" type="checkbox" required>
                    <label for="terms" class="reg-label">
                        Я прочитал и принимаю технику безопасности <span class="required">*</span>
                    </label>
                </div>
                <span asp-validation-for="Input.AcceptTerms" class="text-danger"></span>
            </div>

            <!-- Ads -->
            <div class="row">
                <div class="input-group">
                    <input asp-for="Input.ReceivePromotions" id="reg-ads" type="checkbox">
                    <label for="reg-ads" class="reg-label">
                        Получать сообщения об акциях и предложениях на электронную почту
                    </label>
                </div>
            </div>

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <button id="submitForm" type="submit" class="red-button">Регистрация</button>
        </form>
    </div>
</div>

<link rel="stylesheet" href="~/css/registration.css">

@section Scripts{
<partial name="_ValidationScriptsPartial" />
    <script type="module" src='@Url.Content("~/js/registration.js")'></script>
}